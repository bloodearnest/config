if [ -f $LOCALBIN/virtualenvwrapper.sh ]
then
    #export VIRTUALENVWRAPPER_VIRTUALENV=$LOCALBIN/virtualenv
    export VIRTUALENVWRAPPER_SCRIPT=$LOCALBIN/virtualenvwrapper.sh
